pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '3', artifactNumToKeepStr: '3'))
    }

    tools {
        maven 'maven-3.9.9'
    }

    stages {
        stage('Code Compilation') {
            steps {
                echo 'ğŸ”§ Starting Code Compilation...'
                sh 'mvn clean compile'
                echo 'âœ… Code Compilation Completed Successfully!'
            }
        }

        stage('Code QA Execution') {
            steps {
                echo 'ğŸ§ª Running JUnit Test Cases...'
                sh 'mvn test'
                echo 'âœ… JUnit Test Cases Completed Successfully!'
            }
        }

        stage('Code Package') {
            steps {
                echo 'ğŸ“¦ Creating jar Artifact...'
                sh 'mvn package'
                echo 'âœ… jar Artifact Created Successfully!'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build completed successfully.'
        }
        failure {
            echo 'âŒ Build failed.'
        }
    }
}
